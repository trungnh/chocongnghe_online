<?php  global $var_yttheme;  ?>
<?php if(($crumbs && is_array($crumbs)) || $var_yttheme->isHomepage()): ?>
<div id="yt_pathway" class="clearfix">
	<div class="pathway-inner">
		<!--<h4><?php //echo $this->__("You're currently on:") ?></h4>-->
		<ul class="breadcrumbs">
        	<i class="breadcrumbs-icon"></i>
            <div class="breadcrumbs-content">
			<li class="breadcrumbs-home"><?php if($var_yttheme->isHomepage()) : echo "Home"; endif; ?></li>
		  <?php foreach($crumbs as $_crumbName=>$_crumbInfo): ?>
            <li class="<?php echo $_crumbName.(($_crumbInfo['last'])?' last':''); ?>">
            <?php if($_crumbInfo['link']): ?>
                <a href="<?php echo $_crumbInfo['link'] ?>" title="<?php echo $this->htmlEscape($_crumbInfo['title']) ?>" class="has-link"><?php echo $this->htmlEscape($_crumbInfo['label']) ?></a>
                &nbsp;&nbsp;&nbsp;<span class="icon-caret-right"></span>&nbsp;&nbsp;&nbsp;
            <?php elseif($_crumbInfo['last']): ?>
                <?php echo $this->htmlEscape($_crumbInfo['label']) ?>
            <?php else: ?>
                <?php echo $this->htmlEscape($_crumbInfo['label']) ?>
            <?php endif; ?>
            <?php if(!$_crumbInfo['last']): ?>
                <!--<span class="separator">&nbsp</span>-->
            <?php endif; ?>
            </li>
        <?php endforeach; ?>
        </div>
		</ul>
	</div>
</div>
<?php endif; ?>