<?php
/**
 * @see Mage_Page_Block_Template_Links
 */
?>
<?php $_links = $this->getLinks(); ?>
<?php if(count($_links)>0): ?>
	<ul class="links nav"<?php if($this->getName()): ?> id="<?php echo $this->getName() ?>"<?php endif;?>>
		<?php $i = 0; foreach($_links as $_link): $i++;?>
			
			<?php if ($_link instanceof Mage_Core_Block_Abstract):?>
				<?php echo $_link->toHtml() ?>
			<?php else: ?>
				<li class="<?php if($_link->getIsFirst()||$_link->getIsLast()): ?>  <?php if($_link->getIsFirst()): ?>first<?php endif; ?><?php if($_link->getIsLast()): ?> last<?php endif; ?><?php endif; ?> <?php if( $i == 4 || $i == 5 ){ echo "hidden-mobile";}?>" <?php echo $_link->getLiParams() ?>><?php echo $_link->getBeforeText() ?>
                <div class="<?php if($i == 1){echo "header-user";}else if($i==3){echo "header-cart";}
					else if($i==4){echo "header-signin";}else if($i==5){echo "header-lock";}?>">
					<span class="<?php if($i == 1){/*echo "icon-user";*/}else if($i==3){echo "icon-shopping-cart";}
					else if($i==4){echo "icon-signin";}else if($i==5){echo "icon-lock";}?>"></span>
					<a href="<?php echo $_link->getUrl() ?>" title="<?php echo $_link->getTitle() ?>" <?php echo $_link->getAParams() ?>><?php echo $_link->getLabel() ?>
					</a><?php echo $_link->getAfterText() ?>
                </div>
				</li>
			<?php endif;?>
		<?php endforeach; ?>
	</ul>
<?php endif; ?>
