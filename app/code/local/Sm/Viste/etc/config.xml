<?xml version="1.0"?>
<config>
	<modules>
		<Sm_Viste>
			<version>1.0.0</version>
			<title>MagenTech.com</title>
			<link><![CDATA[http://www.magentech.com/]]></link>
		</Sm_Viste>
	</modules>
	<global>
		<helpers>
		  <viste>
			<class>Sm_Viste_Helper</class>
		  </viste>
		</helpers>
		<models>
		  <viste>
			<class>Sm_Viste_Model</class>
		  </viste>
		</models>		
	</global>
	<adminhtml>
        <translate>
            <modules>
                <Sm_Viste>
                    <files>
                        <default>Sm_Viste.csv</default>
                    </files>
                </Sm_Viste>
            </modules>
        </translate>
	</adminhtml>	
 	<default>
		<viste_cfg module="viste">
			<general>
				<showcpanel>1</showcpanel>
				<color>cyan</color>
				<body_background_color>#ffffff</body_background_color>
				<body_link_color>#909090</body_link_color>
				<body_text_color>#909090</body_text_color>
				<menu_styles>1</menu_styles>
				<google_font>Questrial</google_font>
				<google_font_targets></google_font_targets>
				<body_font_size>12px</body_font_size>
				<body_font_family>Arial</body_font_family>
				<responsive_menu>collapse</responsive_menu>
			</general>
		</viste_cfg>
	</default> 
</config> 