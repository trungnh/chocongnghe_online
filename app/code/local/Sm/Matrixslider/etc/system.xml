<?xml version="1.0"?>
<config>
    <tabs>
        <sm>
            <label>Magentech.com</label>
            <sort_order>200</sort_order>
        </sm>
    </tabs>    
    <sections>
    	<matrixslider_cfg translate="label" module="matrixslider">
    		<label>SM Matrix Slider</label>            
            <tab>sm</tab>
			<frontend_type>text</frontend_type>
            <sort_order>150</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
            	<!-- start general group -->
            	<general translate="label">
            		<label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                    	<isenabled translate="label" module="core">
							<label>Enabled</label>
							<sort_order>0</sort_order>
							<frontend_type>select</frontend_type>
                        	<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</isenabled>
						<product_links_target translate="label">
							<label>Link Target</label>
		            		<frontend_type>select</frontend_type>
							<source_model>matrixslider/system_config_source_linkTargets</source_model>
		            		<sort_order>1</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</product_links_target>	
						<product_devices_width0 translate="label">
							<label>For devices have screen width from 1600px to greater.</label>
		            		<frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
		            		<sort_order>2</sort_order>
		            		<show_in_default>1</show_in_default>
						</product_devices_width0>
						<nb_column0 translate="label">
							<label>#Column</label>
							<frontend_type>select</frontend_type>
							<source_model>matrixslider/system_config_source_columnSetting</source_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</nb_column0>
						<product_devices_width1 translate="label">
							<label>For devices have screen width from 1200px up to 1599px.</label>
		            		<frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
		            		<sort_order>4</sort_order>
		            		<show_in_default>1</show_in_default>
						</product_devices_width1>
						<nb_column1 translate="label">
							<label>#Column</label>
							<frontend_type>select</frontend_type>
							<source_model>matrixslider/system_config_source_columnSetting</source_model>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</nb_column1>
						<product_devices_width2 translate="label">
							<label>For devices have screen width from 768px up to 1199px.</label>
		            		<frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
		            		<sort_order>6</sort_order>
		            		<show_in_default>1</show_in_default>
						</product_devices_width2>
						<nb_column2 translate="label">
							<label>#Column</label>
							<frontend_type>select</frontend_type>
							<source_model>matrixslider/system_config_source_columnSetting</source_model>
							<sort_order>7</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</nb_column2>
						<product_devices_width3 translate="label">
							<label>For devices have screen width from 480px up to 767px.</label>
		            		<frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
		            		<sort_order>8</sort_order>
		            		<show_in_default>1</show_in_default>
						</product_devices_width3>
						<nb_column3 translate="label">
							<label>#Column</label>
							<frontend_type>select</frontend_type>
							<source_model>matrixslider/system_config_source_columnSetting</source_model>
							<sort_order>9</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</nb_column3>
						<product_devices_width4 translate="label">
							<label>For devices have screen width less than or equal 479px.</label>
		            		<frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
		            		<sort_order>10</sort_order>
		            		<show_in_default>1</show_in_default>
						</product_devices_width4>
						<nb_column4 translate="label">
							<label>#Column</label>
							<frontend_type>select</frontend_type>
							<source_model>matrixslider/system_config_source_columnSetting</source_model>
							<sort_order>11</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</nb_column4>
                    </fields>
	            </general>
	            <!-- end general group -->
				
	            <!-- start product_selection group -->
	            <product_selection translate="label">
	            	<expanded>1</expanded>
	            	<label>Product Selection</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
	            	<fields>
						<product_category translate="label">
		            		<label>Select Category</label>
		            		<frontend_type>multiselect</frontend_type>
		            		<source_model>matrixslider/system_config_source_listCategory</source_model>
		            		<comment>This is not effect on category views and product views.</comment>
		            		<sort_order>20</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<depends><product_source>catalog</product_source></depends>
						</product_category>
		            	<product_order_by translate="label">
		            		<label>Product Order By</label>
		            		<frontend_type>select</frontend_type>
		            		<source_model>matrixslider/system_config_source_orderBy</source_model>
		            		<sort_order>40</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<depends><product_source>catalog</product_source></depends>
						</product_order_by>
		            	<product_order_dir translate="label">
		            		<label>Product Order Dir</label>
		            		<frontend_type>select</frontend_type>
		            		<source_model>matrixslider/system_config_source_orderDirection</source_model>
		            		<sort_order>50</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<depends><product_source>catalog</product_source></depends>
						</product_order_dir>
						<product_limitation translate="label">
		            		<label>Product Limitation</label>
		            		<frontend_type>text</frontend_type>
		            		<sort_order>60</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<depends><product_source>catalog</product_source></depends>
						</product_limitation>
	            	</fields>
	            </product_selection>
				<!-- End product product_selection -->	
				
				<!-- Strat product product_display_setting -->
				<product_display_setting translate="label">
					<label>Products Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>40</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
					<fields>
						<product_title_heading translate="label">
							<label>Product Title</label>
		            		<frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
		            		<sort_order>1</sort_order>
		            		<show_in_default>1</show_in_default>
						</product_title_heading>
						<product_title_disp translate="label">
							<label>Display</label>
		            		<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
		            		<sort_order>2</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</product_title_disp>
						<product_title_maxlength translate="label">
							<label>Maxlength</label>
		            		<frontend_type>text</frontend_type>
		            		<sort_order>3</sort_order>
							<comment><![CDATA[The maxlength of title can be showed. Choose 0 for showing full title.]]></comment>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</product_title_maxlength>
						
						<product_description_heading translate="label">
							<label>Product Description</label>
		            		<frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
		            		<sort_order>4</sort_order>
		            		<show_in_default>1</show_in_default>
						</product_description_heading>
						<product_description_disp translate="label">
							<label>Display</label>
		            		<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
		            		<sort_order>5</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</product_description_disp>
						<product_description_maxlength translate="label">
							<label>Maxlength</label>
		            		<frontend_type>text</frontend_type>
		            		<sort_order>6</sort_order>
							 <comment><![CDATA[The maxlength of description can be showed. Choose 0 for showing full description.]]></comment>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</product_description_maxlength>
						<product_image_heading translate="label">
							<label>Product Image</label>
		            		<frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
		            		<sort_order>7</sort_order>
		            		<show_in_default>1</show_in_default>
						</product_image_heading>
						<product_image_width translate="label">
		            		<label>Image Width</label>
		            		<frontend_type>text</frontend_type>
		            		<sort_order>8</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</product_image_width>
	            		<product_image_height translate="label">
		            		<label>Image Height</label>
		            		<frontend_type>text</frontend_type>
		            		<sort_order>9</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</product_image_height>
						<product_other_infomations_heading translate="label">
							<label>Others</label>
		            		<frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
		            		<sort_order>10</sort_order>
		            		<show_in_default>1</show_in_default>
						</product_other_infomations_heading>
						<product_price_disp translate="label">
							<label>Display Price</label>
		            		<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
		            		<sort_order>11</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</product_price_disp>
						<product_reviews_count translate="label">
							<label>Display Reviews Summary</label>
		            		<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
		            		<sort_order>12</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</product_reviews_count>										
						<product_readmore_disp translate="label">
		            		<label>Display Readmore Link</label>
		            		<frontend_type>select</frontend_type>
		            		<source_model>adminhtml/system_config_source_yesno</source_model>
		            		<sort_order>13</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</product_readmore_disp>
						<product_readmore_text translate="label">
							<label>Reamore Text</label>
		            		<frontend_type>text</frontend_type>
		            		<sort_order>14</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</product_readmore_text>
					</fields>
				</product_display_setting>
	            <!-- End product product_display_setting -->	
				
				<!-- Strat  effect_setting -->	
				<effect_setting tranlate="label">
					<label>Effect Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>50</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<eff_start translate="label">
							<label>Product Start</label>
							<fontend_type>text</fontend_type>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</eff_start>
						<auto_play translate="label">
							<label>Auto Play</label>
							<frontend_type>select</frontend_type>
		            		<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</auto_play>
						<interval translate="label">
							<label>Interval</label>
							<fontend_type>text</fontend_type>
							<sort_order>3</sort_order>
							 <comment><![CDATA[Speed of Timer. Larger = Slower]]></comment>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</interval>
						<speed translate="label">
							<label>Speed</label>
							<fontend_type>text</fontend_type>
							<sort_order>3</sort_order>
							 <comment><![CDATA[Speed of Slider. Larger = Slower]]></comment>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</speed>
						<pause_hover translate="label">
							<label>Stop When Hover</label>
							<frontend_type>select</frontend_type>
		            		<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</pause_hover>
						<swipe_enable translate="label">
							<label>Swipe</label>
							<frontend_type>select</frontend_type>
		            		<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>5</sort_order>
							 <comment><![CDATA[Set to true to enable swipe gesture support for advancing the slider forward or back.]]></comment>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</swipe_enable>
						<easing translate="label">
							<label>Easing</label>
							<frontend_type>select</frontend_type>
		            		<source_model>matrixslider/system_config_source_easing</source_model>
							<sort_order>6</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</easing>
					</fields>
				</effect_setting>
				<!-- End  effect_setting -->		
				
				<!-- Strat  advanced -->		
	            <advanced translate="label">
	            	<label>Advanced settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>60</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                    	<include_jquery translate="label">
                    		<label>Include jQuery</label>
		            		<frontend_type>select</frontend_type>
		            		<source_model>adminhtml/system_config_source_yesno</source_model>
		            		<sort_order>10</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                    	</include_jquery>                  	
	            		<pretext translate="label">
		            		<label>Pre-text</label>
		            		<frontend_type>textarea</frontend_type>
		            		<sort_order>20</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</pretext>
	            		<posttext translate="label">
		            		<label>Post-text</label>
		            		<frontend_type>textarea</frontend_type>
		            		<sort_order>30</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</posttext>
					</fields>
	            </advanced>
				<!-- End product advanced -->		
            </groups>
    	</matrixslider_cfg>
    </sections>
</config>